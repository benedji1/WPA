<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0" 
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

    <application>
        <!--This is needed if using spring beans in the EL expressions--> 
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        
        <!--Localization configuration-->
        <!--defin the default and the supported locales.-->
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>cs_CZ</supported-locale>
        </locale-config>        
        <!--create a resource bundle kde jsou soubory s pÅ™eklady-->
        <resource-bundle>
            <base-name>cvut.semestralka.prop.rental</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
      
        <from-view-id>/Login/login.xhtml </from-view-id>
        <navigation-case>
            <display-name>Login fail</display-name>
            <from-action>#{login.login()}</from-action>
            <from-outcome>login_fail</from-outcome>
            <to-view-id>/Login/loginFail.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <display-name>Employee login success</display-name>
            <from-action>#{login.login()}</from-action>
            <from-outcome>employee_login_success</from-outcome>
            <to-view-id>/Employee/employeeMainPage.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <display-name>Customer login success</display-name>
            <from-action>#{login.login()}</from-action>
            <from-outcome>customer_login_success</from-outcome>
            <to-view-id>/Customer/customerMainPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/Employee/employeeMainPage.xhtml</from-view-id>
        <navigation-case>
            <display-name>Is Admin</display-name>
            <from-action>#{newEmployee.adminCheck()}</from-action>
            <from-outcome>is_admin</from-outcome>
            <to-view-id>/Employee/addNewEmployee.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <display-name>Not Admin</display-name>
            <from-action>#{newEmployee.adminCheck()}</from-action>
            <from-outcome>not_admin</from-outcome>
            <to-view-id>/Employee/errorPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/Customer/registerCustomer.xhtml</from-view-id>
        <navigation-case>
            <display-name>New Customer</display-name>
            <from-action>#{registerCustomer.registerCustomer()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/Customer/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <display-name>Bad login</display-name>
            <from-action>#{registerCustomer.registerCustomer()}</from-action>
            <from-outcome>bad_login</from-outcome>
            <to-view-id>/Customer/errorPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        
</faces-config>
